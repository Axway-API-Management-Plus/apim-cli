{
   "name":"${apiName}",
   "path":"${apiPath}",
   "state":"${state}",
   "version":"1.0.1",
   "organization":"API Development ${orgNumber}",
   "applicationQuota":{
      "restrictions":[
         {
            "method":"*",
            "type":"throttlemb",
            "config":{
               "period":"${applicationPeriod1}",
               "mb":${applicationMB1},
               "per":${applicationPer1}
            }
         }, 
         {
            "method":"*",
            "type":"throttlemb",
            "config":{
               "period":"${applicationPeriod2}",
               "mb":${applicationMB2},
               "per":${applicationPer2}
            }
         }
      ]
   },
   "systemQuota":{
      "restrictions":[
         {
            "method":"*",
            "type":"throttle",
            "config":{
               "period":"${systemPeriod1}",
               "messages":${systemMessages1},
               "per":${systemPer1}
            }
         }, 
         {
            "method":"*",
            "type":"throttle",
            "config":{
               "period":"${systemPeriod2}",
               "messages":${systemMessages2},
               "per":${systemPer2}
            }
         }
      ]
   }
}