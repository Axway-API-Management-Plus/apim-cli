<ehcache:config xmlns:ehcache="http://www.ehcache.org/v3"
	xmlns:jcache="http://www.ehcache.org/v3/jsr107">

	<ehcache:persistence directory="${java.io.tmpdir}/apim-cli" />

	<!-- Used for the enpoint: /applications/<applicationId>/apis -->
	<ehcache:cache alias="applicationAPIAccessCache">
		<ehcache:key-type>java.lang.String</ehcache:key-type>
		<ehcache:value-type>java.lang.String</ehcache:value-type>
		<ehcache:expiry>
			<ehcache:ttl unit="minutes">30</ehcache:ttl>
		</ehcache:expiry>
		<ehcache:resources>
			<ehcache:heap unit="MB">10</ehcache:heap>
			<ehcache:disk unit="MB" persistent="true">20</ehcache:disk>
		</ehcache:resources>
	</ehcache:cache>

	<!-- Used for the enpoint: /organizations/<organizationId>/apis -->
	<ehcache:cache alias="organizationAPIAccessCache">
		<ehcache:key-type>java.lang.String</ehcache:key-type>
		<ehcache:value-type>java.lang.String</ehcache:value-type>
		<ehcache:expiry>
			<ehcache:ttl unit="minutes">30</ehcache:ttl>
		</ehcache:expiry>
		<ehcache:resources>
			<ehcache:heap unit="MB">10</ehcache:heap>
			<ehcache:disk unit="MB" persistent="true">20</ehcache:disk>
		</ehcache:resources>
	</ehcache:cache>
	
	<!-- Used for the enpoint: /oauthclientprofiles -->
	<ehcache:cache alias="oauthClientProviderCache">
		<ehcache:key-type>java.lang.String</ehcache:key-type>
		<ehcache:value-type>java.lang.String</ehcache:value-type>
		<ehcache:expiry>
			<ehcache:ttl unit="days">7</ehcache:ttl>
		</ehcache:expiry>
		<ehcache:resources>
			<ehcache:heap unit="MB">1</ehcache:heap>
			<ehcache:disk unit="MB" persistent="true">2</ehcache:disk>
		</ehcache:resources>
	</ehcache:cache>
	
	<!-- Used for the enpoint: /applications/<applicationId> -->
	<ehcache:cache alias="applicationsCache">
		<ehcache:key-type>java.lang.String</ehcache:key-type>
		<ehcache:value-type>java.lang.String</ehcache:value-type>
		<ehcache:expiry>
			<ehcache:ttl unit="minutes">60</ehcache:ttl>
		</ehcache:expiry>
		<ehcache:resources>
			<ehcache:heap unit="MB">10</ehcache:heap>
			<ehcache:disk unit="MB" persistent="true">20</ehcache:disk>
		</ehcache:resources>
	</ehcache:cache>
	
	<!-- Used for the enpoint: /proxies/<apiId>/applications" -->
	<ehcache:cache alias="applicationsSubscriptionCache">
		<ehcache:key-type>java.lang.String</ehcache:key-type>
		<ehcache:value-type>java.lang.String</ehcache:value-type>
		<ehcache:expiry>
			<ehcache:ttl unit="minutes">60</ehcache:ttl>
		</ehcache:expiry>
		<ehcache:resources>
			<ehcache:heap unit="MB">10</ehcache:heap>
			<ehcache:disk unit="MB" persistent="true">20</ehcache:disk>
		</ehcache:resources>
	</ehcache:cache>
	
	<!-- Used for the enpoint: /applications/<applicationId>/quota" -->
	<ehcache:cache alias="applicationsQuotaCache">
		<ehcache:key-type>java.lang.String</ehcache:key-type>
		<ehcache:value-type>java.lang.String</ehcache:value-type>
		<ehcache:expiry>
			<ehcache:ttl unit="minutes">60</ehcache:ttl>
		</ehcache:expiry>
		<ehcache:resources>
			<ehcache:heap unit="MB">10</ehcache:heap>
			<ehcache:disk unit="MB" persistent="true">20</ehcache:disk>
		</ehcache:resources>
	</ehcache:cache>
	
	<!-- Used for the enpoint: /applications/<applicationId>/<oauth|apikeys|extclients>" -->
	<ehcache:cache alias="applicationsCredentialCache">
		<ehcache:key-type>java.lang.String</ehcache:key-type>
		<ehcache:value-type>java.lang.String</ehcache:value-type>
		<ehcache:expiry>
			<ehcache:ttl unit="minutes">60</ehcache:ttl>
		</ehcache:expiry>
		<ehcache:resources>
			<ehcache:heap unit="MB">10</ehcache:heap>
			<ehcache:disk unit="MB" persistent="true">20</ehcache:disk>
		</ehcache:resources>
	</ehcache:cache>
	
	<!-- Used for the enpoint: /organizations/<orgId>" -->
	<ehcache:cache alias="organizationCache">
		<ehcache:key-type>java.lang.String</ehcache:key-type>
		<ehcache:value-type>java.lang.String</ehcache:value-type>
		<ehcache:expiry>
			<ehcache:ttl unit="minutes">60</ehcache:ttl>
		</ehcache:expiry>
		<ehcache:resources>
			<ehcache:heap unit="MB">10</ehcache:heap>
			<ehcache:disk unit="MB" persistent="true">20</ehcache:disk>
		</ehcache:resources>
	</ehcache:cache>
</ehcache:config>