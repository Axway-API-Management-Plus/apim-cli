<ehcache:config xmlns:ehcache="http://www.ehcache.org/v3"
	xmlns:jcache="http://www.ehcache.org/v3/jsr107">

	<ehcache:persistence directory="${java.io.tmpdir}/apim-cli-cache" />

	<!-- Used for the endpoint: /applications/<applicationId>/apis (Not used anymore in version >7.7) -->
	<ehcache:cache alias="APPLICATION_API_ACCESS_CACHE">
		<ehcache:key-type>java.lang.String</ehcache:key-type>
		<ehcache:value-type>java.lang.String</ehcache:value-type>
		<ehcache:expiry>
			<ehcache:ttl unit="minutes">60</ehcache:ttl>
		</ehcache:expiry>
		<ehcache:resources>
			<ehcache:heap unit="entries">100</ehcache:heap>
			<ehcache:disk unit="MB" persistent="true">20</ehcache:disk>
		</ehcache:resources>
	</ehcache:cache>

	<!-- Used for the endpoint: /organizations/<organizationId>/apis -->
	<ehcache:cache alias="ORGANIZATION_API_ACCESS_CACHE">
		<ehcache:key-type>java.lang.String</ehcache:key-type>
		<ehcache:value-type>java.lang.String</ehcache:value-type>
		<ehcache:expiry>
			<ehcache:ttl unit="minutes">60</ehcache:ttl>
		</ehcache:expiry>
		<ehcache:resources>
			<ehcache:heap unit="entries">50</ehcache:heap>
			<ehcache:disk unit="MB" persistent="true">20</ehcache:disk>
		</ehcache:resources>
	</ehcache:cache>
	
	<!-- Used for the endpoint: /oauthclientprofiles -->
	<ehcache:cache alias="OAUTH_CLIENT_PROVIDER_CACHE">
		<ehcache:key-type>java.lang.String</ehcache:key-type>
		<ehcache:value-type>java.lang.String</ehcache:value-type>
		<ehcache:expiry>
			<ehcache:ttl unit="days">14</ehcache:ttl>
		</ehcache:expiry>
		<ehcache:resources>
			<ehcache:heap unit="entries">1</ehcache:heap>
			<ehcache:disk unit="MB" persistent="true">2</ehcache:disk>
		</ehcache:resources>
	</ehcache:cache>
	
	<!-- Used for the endpoint: /applications/<applicationId> -->
	<ehcache:cache alias="APPLICATIONS_CACHE">
		<ehcache:key-type>java.lang.String</ehcache:key-type>
		<ehcache:value-type>java.lang.String</ehcache:value-type>
		<ehcache:expiry>
			<ehcache:ttl unit="minutes">180</ehcache:ttl>
		</ehcache:expiry>
		<ehcache:resources>
			<ehcache:heap unit="entries">500</ehcache:heap>
			<ehcache:disk unit="MB" persistent="true">20</ehcache:disk>
		</ehcache:resources>
	</ehcache:cache>
	
	<!-- Used for the endpoint: /proxies/<apiId>/applications" -->
	<ehcache:cache alias="APPLICATIONS_SUBSCRIPTION_CACHE">
		<ehcache:key-type>java.lang.String</ehcache:key-type>
		<ehcache:value-type>java.lang.String</ehcache:value-type>
		<ehcache:expiry>
			<ehcache:ttl unit="minutes">180</ehcache:ttl>
		</ehcache:expiry>
		<ehcache:resources>
			<ehcache:heap unit="entries">500</ehcache:heap>
			<ehcache:disk unit="MB" persistent="true">20</ehcache:disk>
		</ehcache:resources>
	</ehcache:cache>
	
	<!-- Used for the endpoint: /applications/<applicationId>/quota" -->
	<ehcache:cache alias="APPLICATIONS_QUOTA_CACHE">
		<ehcache:key-type>java.lang.String</ehcache:key-type>
		<ehcache:value-type>java.lang.String</ehcache:value-type>
		<ehcache:expiry>
			<ehcache:ttl unit="minutes">180</ehcache:ttl>
		</ehcache:expiry>
		<ehcache:resources>
			<ehcache:heap unit="entries">500</ehcache:heap>
			<ehcache:disk unit="MB" persistent="true">20</ehcache:disk>
		</ehcache:resources>
	</ehcache:cache>
	
	<!-- Used for the endpoint: /applications/<applicationId>/<oauth|apikeys|extclients>" -->
	<ehcache:cache alias="APPLICATIONS_CREDENTIAL_CACHE">
		<ehcache:key-type>java.lang.String</ehcache:key-type>
		<ehcache:value-type>java.lang.String</ehcache:value-type>
		<ehcache:expiry>
			<ehcache:ttl unit="minutes">60</ehcache:ttl>
		</ehcache:expiry>
		<ehcache:resources>
			<ehcache:heap unit="entries">500</ehcache:heap>
			<ehcache:disk unit="MB" persistent="true">20</ehcache:disk>
		</ehcache:resources>
	</ehcache:cache>
	
	<!-- Used for the endpoint: /organizations/<orgId>" -->
	<ehcache:cache alias="ORGANIZATION_CACHE">
		<ehcache:key-type>java.lang.String</ehcache:key-type>
		<ehcache:value-type>java.lang.String</ehcache:value-type>
		<ehcache:expiry>
			<ehcache:ttl unit="days">7</ehcache:ttl>
		</ehcache:expiry>
		<ehcache:resources>
			<ehcache:heap unit="entries">50</ehcache:heap>
			<ehcache:disk unit="MB" persistent="true">20</ehcache:disk>
		</ehcache:resources>
	</ehcache:cache>
	
	<!-- Used for the endpoint: /users/<userId>" -->
	<ehcache:cache alias="USER_CACHE">
		<ehcache:key-type>java.lang.String</ehcache:key-type>
		<ehcache:value-type>java.lang.String</ehcache:value-type>
		<ehcache:expiry>
			<ehcache:ttl unit="days">7</ehcache:ttl>
		</ehcache:expiry>
		<ehcache:resources>
			<ehcache:heap unit="entries">500</ehcache:heap>
			<ehcache:disk unit="MB" persistent="true">20</ehcache:disk>
		</ehcache:resources>
	</ehcache:cache>
</ehcache:config>